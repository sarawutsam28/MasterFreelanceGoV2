@using FreelanceGo_MasterV2.Models;
@{ Layout = "_NewLayuot"; ViewData["Title"] = "ProjectDetails"; }


@{  
   var ProjectDetails = ViewData["ProjectDetails"] as Project; 
   //IEnumerable<Project> ProjectEmployers = ViewData["ProjectEmployer"] as IEnumerable<Project>; 
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
<style>
            .project {
                background-color: white;
                padding: 5rem;
                padding-bottom: 2rem;
                padding-top: 1rem;
                padding-left: 10rem;
                padding-right: 10rem;
                border: 1px solid red;
                border-color: #ccc;
                -webkit-box-shadow: 0px 2px 3px 0px rgba(0, 0, 0, 0.2);
            }

            .Auction {
                background-color: white;
                margin-top: 3rem;
                padding: 3rem;
                border: 1px solid red;
                border-color: #ccc;
                -webkit-box-shadow: 0px 2px 3px 0px rgba(0, 0, 0, 0.2);
            }

            .boxrating {
                background-color: red;
                color: white;
                border-radius: 2px;
                margin-right: 6px;
                padding: 1px 3px 0;
            }
            .datanull{
                height: 5rem;
            }
</style>


<div class="container">
     <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1>@ProjectDetails.ProjectName</h1>
                            <input type="hidden" id="Project_ID" value=@ProjectDetails.Project_ID />
                        </div>
                    </div>
                    <div class="project">
                        <div class="row">
                            <div class="col-sm-8">
                                <h3>รายละเอียด</h3>
                            </div>
                        </div>
                        <div class="subdetails">
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>@ProjectDetails.Description</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>ราคาเริ่มต้น: @ProjectDetails.Budget บาท</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>ระยะเวลาในการทำงาน: @ProjectDetails.Timelength วัน</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>วันที่เริ่มประมูล: @Html.DisplayFor(modelItem => ProjectDetails.StartingDate)</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>วันที่สิ้นสุดการประมูล: @Html.DisplayFor(modelItem => ProjectDetails.EndDate)</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                                <div class="col-sm-12">
                                    <p>ประเภทงาน: @ProjectDetails.TypeProject.Name</p>
                                </div>
                            </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h3>ความสามารถที่ต้องการ</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <p id="Project_IDText">
                                    <p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <h3>ข้อมูลผู้จ้าง</h3>
                            </div>
                        </div>
                        @if (@ProjectDetails.Employer != null) {
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>
                                    <a asp-controller="Outsider" asp-action="ProfileDetailsEmployer" asp-route-id=@ProjectDetails.Employer.Employer_ID>@ProjectDetails.Employer.FullName</a>
                                </h4>
                            </div>
                            <div class="col-sm-12">
                                <span class="boxrating">@ProjectDetails.Employer.Rating.0</span> @for (int i=0;i
                                < ProjectDetails.Employer.Rating; i++) { <span style="color: red; font-size: 20px;">★</span>
                                    }
                            </div>
                        </div>
                        } else if (@ProjectDetails.Company != null) {
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>
                                    <a asp-controller="Outsider" asp-action="ProfileDetailsCompany" asp-route-id=@ProjectDetails.Company.Company_ID>@ProjectDetails.Company.Company_Name</a>
                                </h4>
                            </div>
                            <div class="col-sm-12">
                                <span class="boxrating">@ProjectDetails.Company.Rating.0</span> @for (int i=0;i
                                < ProjectDetails.Company.Rating; i++) { <span style="color: red; font-size: 20px;">★</span>
                                    }
                            </div>
                        </div><div class="row">
                            <div class="col-sm-12">
                                <h4>
                                    <a asp-controller="Outsider" asp-action="ProfileDetailsCompany" asp-route-id=@ProjectDetails.Company.Company_ID>@ProjectDetails.Company.Company_Name</a>
                                </h4>
                            </div>
                            <div class="col-sm-12">
                                <span class="boxrating">@ProjectDetails.Company.Rating.0</span> @for (int i=0;i
                                < ProjectDetails.Company.Rating; i++) { <span style="color: red; font-size: 20px;">★</span>
                                }
                            </div>
                        </div>
                        }
                        <div class="row" style="margin-top: 1rem;">
                            <div class="col-sm-12">
                                <span class="pull-right">
                                    <span style=" color: red; font-weight: bold;">วันที่หมดเวลาประกาศงาน:</span> @Html.DisplayFor(modelItem => ProjectDetails.ProjectTimeOut)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="Auction"> 
                <div class="row">
                    <div class="col-sm-12">
                        <table style="width:100%;">
							<thead>
                                <tr style="height: 5rem; background-color: #4e4d4d; color:  white;">
                                <th class="col-xs-5">ชื่อ</th>
                                <th class="col-xs-3 text-center">ราคา</th>
                                <th class="col-xs-3 text-center">ระยะเวลาในการทำงาน/วัน</th>
                                <th class="col-xs-1 text-center"></th>
                                </tr>
							</thead>
							<tbody id="AuctionTable" class="points_table_scrollbar">
							</tbody>
							</table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
$().ready(function() {
     var Project_ID = $("#Project_ID").val();
        jQuery.ajax({
        type: "get",
        dataType: "json",
        url: "/Freelnace/GetProjectAuction/"+ Project_ID,
        success: function (data) {
            console.log(data);
            if(data.length == 0)
            {
                var datanull = $('<tr><td></td><td class="datanull text-center">--- ไม่มีการประมูล ---</td></tr>');
                $("#AuctionTable").append(datanull);
            } else
            {
                $.each(data, function(key, data) {   
               var row1 = $('<tr class="odd" style="height:5rem;">'+
                                    '<td class="col-xs-2"><a href="/Freelnace/ProfileDetailsFreelance/'+data.freelance_ID+'">'+data.fullName+'</a></td>'+
                                    '<td class="col-xs-3 text-center">'+ data.price +' บาท</td>'+
                                    '<td class="col-xs-3 text-center">'+ data.auctionTime +' วัน</td>'+
                                    '<td class="col-xs-1 text-center AcceptFreelance"><a href="/Home/AcceptFreelance?id='+data.freelance_ID+'&ProjectPrice='+data.price+'&ProjectTimelength='+data.auctionTime+'" class="btn btn-xs btn-success pull-right"><i class="fas fa-check"></i></a>'+
                            '</tr>');
               $("#AuctionTable").append(row1);
            });
            }
             $.ajax({
                url: '/Home/GetProjectFreelance/'+Project_ID,
                type: 'GET',
                success: function(data){ 
                    console.log(data);
                    if (data.freelance_ID != null) {
                        $(".AcceptFreelance").css("display", "none");
                    }
                },
                error: function(data) {
                    alert('woops!'); //or whatever
                }
            });
        },
        error: function (data) {
            alert("กรอกข้อมูลไม่ถูกต้อง");
        },
        }); //end ajax

      jQuery.ajax({
        type: "get",
        dataType: "json",
        url: "/Home/GetProjectSkill/"+ Project_ID,
        success: function (data) {
            console.log(data);
            $.each(data, function(key, data) {  
               $("#Project_IDText").append(data.name + " | ");
            });
        },
        error: function (data) {
            alert("กรอกข้อมูลไม่ถูกต้อง");
        },
        }); //end ajax
       
});
</script>