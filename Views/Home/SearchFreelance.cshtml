@using FreelanceGo_MasterV2.Models; 
@{ViewData["Title"] = "SearchFreelance"; } 
@{ 
   IEnumerable<Skill> Skills = ViewData["Skill"] as IEnumerable<Skill>; 
   IEnumerable<Freelance> FreelanceList = ViewData["_Freelance"] as IEnumerable<Freelance>; 
}

<style>
.bassform {
        border: 1px solid #d4d4d5;
        padding: 12px;
        border-radius: 6px;
        margin-bottom: 12px;
        margin-top: 3rem;
}

.card {
    background:#fff;
    box-shadow:0 20px 50px rgba(0,0,0,.1);
    border-radius:10px;
    transition:0.5s;
    margin-bottom: 3rem;
    height: 279px;
    margin-top: 2rem;
}
.card:hover {
    box-shadow:0 30px 70px rgba(0,0,0,.2);
}
.card .box {
    text-align:center;
    padding:20px;
    box-sizing:border-box;
    width:100%;
}
.card .box .img {
    width:120px;
    height:120px;
    margin:0 auto;
    border-radius:50%;
    overflow:hidden;
}
.card .box .img img {
    width:100%;
    height:100%;
}
.card .box h2 {
    font-size:20px;
    color:#262626;
}
.card .box h2 .skill {
    font-size:14px;
    background:#e91e63;
    color:#fff;
    display:inline-block;
    padding:4px 10px;
    border-radius:15px;
}
.card .box p {
    color:#262626;
}
.card .box span {
    display:inline-flex;
}
.card .box ul {
    margin:0;
    padding:0;
}
.card .box ul li {
    list-style:none;
    float:left;
}
.card .box ul li a {
    display:block;
    color:#aaa;
    margin:0 10px;
    font-size:20px;
    transition:0.5s;
    text-align:center;
}
.card .box ul li:hover a {
    color:#e91e63;
    transform:rotateY(360deg);
}
.strike {
        display: block;
        text-align: center;
        overflow: hidden;
        white-space: nowrap;
        margin-top: 2rem;
    }

    .strike>span {
        position: relative;
        display: inline-block;
        font-size: 3rem;
    }

    .strike>span:before,
    .strike>span:after {
        content: "";
        position: absolute;
        top: 50%;
        width: 9999px;
        height: 1px;
        background: red;
    }

    .strike>span:before {
        right: 100%;
        margin-right: 15px;
    }

    .strike>span:after {
        left: 100%;
        margin-left: 15px;
    }
    #TextVal {
        margin-left: 3rem;
        color: blueviolet;
        font-size: 40ox;
    } 
</style>
<div>
    <div class="container">
        <div class="row" style=" margin-bottom: 3rem;">
            <div class="col-sm-12">
                <div class="strike">
                    <span>ค้นหาฟรีแลนซ์</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                  
            </div>
            <div class="col-sm-5">
                <div class="input "  tabindex="2">
                    <select id="skills"  class="js-example-basic-multiple form-control" name="states[]" multiple="multiple">
                        @foreach (Skill Skill in Skills) 
                        {
                            <option value=@Skill.Skill_ID>@Skill.Name</option>
                        }
                    </select>
                </div>
            </div>
             <div class="col-sm-1">
                <button class="btn btn-default  pull-right" type="button" id="freelance-submit">
                    <i class="fas fa-search"></i> ค้นหา
                </button>
            </div>
        </div>
        <div class="bassform">   
            <div class="row">
                <div class="col-sm-12">
                    <h3 id="TextVal"><i class="far fa-handshake"></i> ฟรีแลนซ์</h3>
                </div>
            </div>
            <hr>
            <div class="row freelance">
                 @foreach (Freelance FreelanceLists in FreelanceList) 
                {
                   <div class="col-sm-3 freelancecon">
                        <div class="card">
                            <div class="box">
                                <div class="img">
                                    <img  src="~/images/@FreelanceLists.ImgName" >
                                </div>
                                <h2>@FreelanceLists.FullName<br>
                                 @foreach (var FreelanceSkills in FreelanceLists.FreelanceSkill) 
                                 {
                                     <span class="skill">@FreelanceSkills.Skill.Name</span>
                                 }
                                <div class="reting">
                                @if (FreelanceLists.Rating == 0)
                                {
                                     @for (int i=0;i< 5; i++)
                                    {
                                        <span style="color: #ccc; font-size: 30px;">★</span>
                                    }
                                }else
                                {
                                    @for (int i=0;i< FreelanceLists.Rating; i++)
                                {
                                    <span style="color: red; font-size: 30px;">★</span>
                                }
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

<script>
$().ready(function() {
    var Skill = [];
    $("#skills").select2({
         maximumSelectionLength: 3,
         placeholder: "เลือกทักษะ",
    });
    $("#skills").change(function() {
    Skill = $("#skills").val();
    console.log(Skill);
    });
     $("#freelance-submit").click(function () {
            var data = $('your-original-element').select2('data');
            if(data) {
            alert(data.text);
            }
			 jQuery.ajax({
			 	type: "post",
			 	dataType: "json",
			 	url: "/Home/SearchFreelanceAPI",
			 	data: { 
                     Skill: Skill,
			 	},
			 	success: function (data) {
			 		console.log(data);
                     $(".cardAPI").css("display", "none");
                     $(".skillList").css("display", "none");
                     $(".freelancecon").css("display", "none");
                    // var length = data.length;
                     //$("#TextVal").append('ผลการค้นหา '+length+' ผลลัพธ์');
                     jQuery.each(data, function (i, data) {
                        var freelance = $('<div class="col-sm-3 cardAPI">'+
                                            '<div class="card">'+
                                                '<div class="box">'+
                                                    '<div class="img">'+
                                                       '<img  src="/images/'+data.imgName+'">'+
                                                    '</div>'+
                                                    '<h2>'+data.fullName+'<br>'+
                                                    '<div class="skillfreelance'+data.freelance_ID +' skillList">'+
                                                    '</div>'+
                                                    '<div class="reting'+data.freelance_ID+'">'+
                                                        
                                                    '</div>'+
                                                '</div>'+
                                            '</div>'+
                                        '</div>');
                        $(".freelance").append(freelance);
                        jQuery.each(data.freelanceSkill, function (i, data) {
                            var skillList = $('<span class="skill">'+data.skill.name+'</span>');
                            $(".skillfreelance"+data.freelance_ID).append(skillList);
                        });
                        var rat = data.rating;
                        var i;
                        if(rat == 0)
                        {
                            for (i = 0; i < 5; i++) { 
                            var ratingfreelance = $('<span style="color: #ccc; font-size: 30px;">★</span>');
                            $(".reting"+data.freelance_ID).append(ratingfreelance);
                            }
                        }else
                        {
                            for (i = 0; i < rat; i++) { 
                                var ratingfreelance = $('<span style="color: red; font-size: 30px;">★</span>');
                                $(".reting"+data.freelance_ID).append(ratingfreelance);
                            }
                        }
                        
                    });
			 	},
			 	error: function (data) {
			 		alert("เกิดข้อผิดพลาด");
			 		///location.replace("http://localhost:5000/Home/ProjectPost");
			 	},
			 });
			});
});
</script>