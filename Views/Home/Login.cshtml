@{
    ViewData["Title"] = "Login";
}



<style>
.containerRegis{
	margin-top: 5rem;
}
input:hover{
}
.panel-login {
	border-color: #ccc;
	-webkit-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
	-moz-box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
	box-shadow: 0px 2px 3px 0px rgba(0,0,0,0.2);
}
.panel-login>.panel-heading {
	color: #00415d;
	background-color: #fff;
	border-color: #fff;
	text-align:center;
}
.panel-login>.panel-heading a{
	text-decoration: none;
	color: #666;
	font-weight: bold;
	font-size: 15px;
	-webkit-transition: all 0.1s linear;
	-moz-transition: all 0.1s linear;
	transition: all 0.1s linear;
}
.panel-login>.panel-heading a.active{
	color: #029f5b;
	font-size: 18px;
}
.panel-login>.panel-heading hr{
	margin-top: 10px;
	margin-bottom: 0px;
	clear: both;
	border: 0;
	height: 1px;
	background-image: -webkit-linear-gradient(left,rgba(0, 0, 0, 0),rgba(0, 0, 0, 0.15),rgba(0, 0, 0, 0));
	background-image: -moz-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.15),rgba(0,0,0,0));
	background-image: -ms-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.15),rgba(0,0,0,0));
	background-image: -o-linear-gradient(left,rgba(0,0,0,0),rgba(0,0,0,0.15),rgba(0,0,0,0));
}
.panel-login input[type="text"],.panel-login input[type="email"],.panel-login input[type="password"],.panel-login input[type="button"]  {
	height: 45px;
	border: 1px solid #ddd;
	font-size: 16px;
	-webkit-transition: all 0.1s linear;
	-moz-transition: all 0.1s linear;
	transition: all 0.1s linear;
}
.panel-login input:hover,
.panel-login input:focus {
	outline:none;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	box-shadow: none;
	border-color: #ccc;
}
.btn-login {
	background-color: #59B2E0;
	outline: none;
	color: #fff;
	font-size: 14px;
	height: auto;
	font-weight: normal;
	padding: 14px 0;
	text-transform: uppercase;
	border-color: #59B2E6;
}
.btn-login:hover,
.btn-login:focus {
	color: #fff;
	background-color: #53A3CD;
	border-color: #53A3CD;
}
.forgot-password {
	text-decoration: underline;
	color: #888;
}
.forgot-password:hover,
.forgot-password:focus {
	text-decoration: underline;
	color: #666;
}

.btn-register {
	background-color: #1CB94E;
	outline: none;
	color: #fff;
	font-size: 14px;
	height: auto;
	font-weight: normal;
	padding: 14px 0;
	text-transform: uppercase;
	border-color: #1CB94A;
}
.btn-com {
	background-color: rgb(185, 28, 140);
	outline: none;
	color: #fff;
	font-size: 14px;
	height: auto;
	font-weight: normal;
	padding: 14px 0;
	text-transform: uppercase;
	border-color:rgb(185, 28, 140);
}
.btn-register:hover,
.btn-register:focus {
	color: #fff;
	background-color: #1CA347;
	border-color: #1CA347;
}
</style>


<div>
    <div class="container containerRegis">
        	<div class="row">
    			<div class="col-md-6 col-md-offset-3">
    				<div class="panel panel-login">
    					<div class="panel-heading">
    						<div class="row">
    							<div class="col-xs-4">
    								<a href="#" class="active" id="login-form-link">ฟรีแลนซ์</a>
    							</div>
    							<div class="col-xs-4">
    								<a href="#" id="register-form-link">ผู้จ้าง</a>
    							</div>
								<div class="col-xs-4">
    								<a href="#" id="registerCompany-form-link">บริษัท</a>
    							</div>
    						</div>
    						<hr>
    					</div>
    					<div class="panel-body">
    						<div class="row">
    							<div class="col-lg-12">
    								<form id="login-form" role="form" style="display: block;">
    									<div class="form-group">
											<label >ชื่อผู้ใช้</label>
    										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="ชื่อผู้ใช้" value="">
    									</div>
    									<div class="form-group">
											<label >Password</label>
    										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">
    									</div>
    									<div class="form-group">
    										<div class="row">
    											<div class="col-sm-6 col-sm-offset-3">
    												<input type="button" name="login-submit" id="Freelance-submit" tabindex="4" class="form-control btn btn-login" value="สมัคร">
    											</div>
    										</div>
    									</div>
    								</form>
    								<form id="register-form"  role="form" style="display: none;">
    									<div class="form-group">
											<label >ชื่อผู้ใช้</label>
    										<input type="text" name="usernameEmployer" id="usernameEmployer" tabindex="1" class="form-control" placeholder="ชื่อผู้ใช้" value="">
    									</div>
    									<div class="form-group">
											<label >Password</label>
    										<input type="password" name="passwordEmployer" id="passwordEmployer" tabindex="2" class="form-control" placeholder="Password">
    									</div>
    									<div class="form-group">
    										<div class="row">
    											<div class="col-sm-6 col-sm-offset-3">
    												<input type="button" name="Employer-submit" id="Employer-submit" tabindex="4" class="form-control btn btn-register" value="สมัคร">
    											</div>
    										</div>
    									</div>
    								</form>
									<form id="registerCompany-form"  role="form" style="display: none;">
    									<div class="form-group">
											<label >ชื่อผู้ใช้</label>
    										<input type="text" name="usernameCompany" id="usernameCompany" tabindex="1" class="form-control" placeholder="ชื่อผู้ใช้" value="">
    									</div>
    									<div class="form-group">
											<label >Password</label>
    										<input type="password" name="passwordCompany" id="passwordCompany" tabindex="2" class="form-control" placeholder="Password">
    									</div>
    									<div class="form-group">
    										<div class="row">
    											<div class="col-sm-6 col-sm-offset-3">
    												<input type="button" name="register-submit" id="Company-submit" tabindex="4" class="form-control btn btn-com" value="สมัคร">
    											</div>
    										</div>
    									</div>
    								</form>
    							</div>
    						</div>
    					</div>
    				</div>
    			</div>
    		</div>
    </div>
</div>


<script>
	$(document).ready(function () {
		//loginFreelance
		var Freelance = {
			UserName: '',
			Password: '',
		};
		$("#username").change(function () {
			Freelance.UserName = $("#username").val();
		});
		$("#password").change(function () {
			Freelance.Password = $("#password").val();
			console.log(Freelance);
		});
		$("#Freelance-submit").click(function () {
			jQuery.ajax({
				type: "post",
				dataType: "json",
				url: "/Home/LoginFreelance",
				data: {
					UserName: Freelance.UserName,
					Password: Freelance.Password,
				},
				success: function (data) {
					console.log(data);
					location.replace("http://localhost:5000/Home/UpdateSkill/");
				},
				error: function (data) {
					alert("กรุณากรอกข้อมูลให้ถูกต้อง");
					location.replace("http://localhost:5000/Home/Login");
				},
			});
			});
		//loginEmployer
		var Employer = {
			UserName: '',
			Password: '',
		};
		$("#usernameEmployer").change(function () {
			Employer.UserName = $("#usernameEmployer").val();
		});
		$("#passwordEmployer").change(function () {
			Employer.Password = $("#passwordEmployer").val();
			console.log(Employer);
		});
		$("#Employer-submit").click(function () {
			jQuery.ajax({
				type: "post",
				dataType: "json",
				url: "/Home/LoginEmployer",
				data: {
					UserName: Employer.UserName,
					Password: Employer.Password,
				},
				success: function (data) {
					console.log(data);
					location.replace("http://localhost:5000/Home/ProfileEmployer/");
				},
				error: function (data) {
					alert("กรุณากรอกข้อมูลให้ถูกต้อง");
					location.replace("http://localhost:5000/Home/Login");
				},
			});
			});
		//loginCompany
		var Company = {
			UserName: '',
			Password: '',
		};
		$("#usernameCompany").change(function () {
			Company.UserName = $("#usernameCompany").val();
		});
		$("#passwordCompany").change(function () {
			Company.Password = $("#passwordCompany").val();
			console.log(Company);
		});
		$("#Company-submit").click(function () {
			jQuery.ajax({
				type: "post",
				dataType: "json",
				url: "/Home/LoginCompany",
				data: {
					UserName: Company.UserName,
					Password: Company.Password,
				},
				success: function (data) {
					console.log(data);
					location.replace("http://localhost:5000/Home/ProfileCompany");
				},
				error: function (data) {
					alert("กรุณากรอกข้อมูลให้ถูกต้อง");
					location.replace("http://localhost:5000/Home/Login");
				},
			});
			});
		//css
			$('#login-form-link').click(function(e) {
			$("#login-form").delay(100).fadeIn(100);
			$("#register-form").fadeOut(100);
			$("#registerCompany-form").fadeOut(100);
			$('#register-form-link').removeClass('active');
			$('#registerCompany-form-link').removeClass('active');
			$(this).addClass('active');
			e.preventDefault();
		});
		$('#register-form-link').click(function(e) {
			$("#register-form").delay(100).fadeIn(100);
			$("#login-form").fadeOut(100)
			$("#registerCompany-form").fadeOut(100);;
			$('#login-form-link').removeClass('active');
			$('#registerCompany-form-link').removeClass('active');
			$(this).addClass('active');
			e.preventDefault();
		});
		$('#registerCompany-form-link').click(function(e) {
			$("#registerCompany-form").delay(100).fadeIn(100);
			$("#login-form").fadeOut(100);
			$("#register-form").fadeOut(100);
			$('#login-form-link').removeClass('active');
			$('#register-form-link').removeClass('active');
			$(this).addClass('active');
			e.preventDefault();
		});
		// end tab
	});
</script>